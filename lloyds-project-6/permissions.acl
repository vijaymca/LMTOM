rule ClaimOwner {
  description: "Allow ClaimOwner"
  participant(t): "org.lloyds.market._Party"
  operation: ALL
  resource(v): "org.lloyds.market.Claim"
  condition: (v.owner.getIdentifier() == t.getIdentifier()  )
  action: ALLOW
}

