rule NetworkUpdate {
  description:  "System ACL to permit all access"
  participant: "org.lloyds.market._Party"
  operation: READ
  resource: "org.hyperledger.composer.system.**"
  action: ALLOW
}

rule SystemACL {
  description:  "System ACL to permit all access"
